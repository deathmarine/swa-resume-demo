@inject IAPIService APIService

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog {
        get; set;
    }

    [Parameter]
    public string Path {
        get; set;
    }

    void Close() => MudDialog.Close(DialogResult.Ok(true));
}

<MudDialog>
    <DialogContent>
        <MudImage Src="@APIService.GetQRCodePath(Path)" Height="250" Width="250" Class="rounded-lg" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Close">Ok</MudButton>
    </DialogActions>
</MudDialog>

